<!DOCTYPE html>
<html>
<head>
  <title>Oleksii Kovalchuk Website</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
</head>
<body>
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/ru_RU/all.js#xfbml=1&appId=400480826665070";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <div id="page">
    <div id="header">
      <a id="language-selector" href="/ru/">Rus</a>

      <ul id="menu">
        <li class="menu-item">
          <%= link_to t('menu.bio'), { :controller => "home", :action => "bio", :locale => I18n.locale } %>
        </li>
        <li class="menu-item">
          <%= link_to t('menu.gallery'), { :controller => "albums", :action => "index", :locale => I18n.locale } %>
        <li class="menu-item">
          <%= link_to t('menu.news'), { :controller => "posts", :action => "index", :locale => I18n.locale }, :class => "no-border" %>
        <li class="menu-item logo">
          <%= link_to "", { :controller => "home", :action => "index", :locale => I18n.locale }, :class => "no-border" %>
        <li class="menu-item">
          <%= link_to t('menu.dates'), { :controller => "events", :action => "index", :locale => I18n.locale } %>
        </li>
        <li class="menu-item">
          <%= link_to t('menu.press'), { :controller => "publications", :action => "index", :locale => I18n.locale } %>
        </li>
        <li class="menu-item last">
          <%= link_to t('menu.contacts'), { :controller => "home", :action => "index", :locale => I18n.locale }, :class => "no-border" %>
        </li>
      </ul>
    </div>

    <% if @notice %><p class="notice"><%= notice %></p><% end %>

    <%= yield %>

  </div>

</body>
</html>
