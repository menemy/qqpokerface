<div class="albums-block page-block">
    <h1 class="title"><span>gallery</span><div class="border"></div></h1>

    <div class="top-line"></div>    
    <div class="albums-list">

      <%= will_paginate @albums, :page_links => false, :previous_label => '', :next_label => '' %>

      <% @albums.each do |album| %>
        <%= link_to url_for( :controller => 'album_items', :action => 'index', :album_id => album, :locale => I18n.locale ), :class => 'list-item' do %>
          <div class="wrapper">
            <div class="foto">
              <% if album.image_file_name.nil? %>
                <img width="180" src="<%= asset_path("news-foto.png"); %>" alt="" />
              <% else %>
                <%= image_tag album.image.url(:thumb), :width => 180 %>
              <% end %>
            </div>
            <span class="date"><%= album.date.strftime('%d.%m.%y') %></span>
            
            <div class="albums-line"></div>
            
            <span class="title"><%= album.title %></span>
          </div>
        <% end %>
      <% end %>

      <!-- <%= link_to 'New album', new_album_path %>-->
    </div>
    <div class="bot-line"></div>

    <br />

    <div class="page-bg"></div>
</div>